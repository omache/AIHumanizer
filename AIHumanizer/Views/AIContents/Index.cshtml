@model IEnumerable<AIHumanizer.Models.AIContent>

@{
    ViewData["Title"] = "My Documents";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2">My Documents</h1>
            <p class="text-muted">Manage and edit your AI-enhanced content</p>
        </div>
        <button class="btn btn-primary d-flex align-items-center" onclick="location.href='@Url.Action("Create")'">
            <i class="material-icons me-2">add</i>
            New Document
        </button>
    </div>

    <div class="row g-4">
        <!-- Create New Document Card -->
        <div class="col-md-4 col-lg-3">
            <a href="@Url.Action("Create")" class="text-decoration-none">
                <div class="card h-100 border-2 border-dashed shadow-sm hover-card">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4"
                         style="min-height: 260px;">
                        <div class="mb-3 rounded-circle bg-light d-flex align-items-center justify-content-center"
                             style="width: 64px; height: 64px;">
                            <i class="material-icons text-primary" style="font-size: 32px;">add</i>
                        </div>
                        <h5 class="mb-2">Create New Document</h5>
                        <p class="text-muted small mb-0">Start with a blank document</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Existing Documents -->
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center"
                                 style="width: 40px; height: 40px;">
                                <i class="material-icons text-primary">description</i>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                    <i class="material-icons">more_vert</i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center"
                                           href="@Url.Action("Edit", new { id = item.Id })">
                                            <i class="material-icons me-2">edit</i>
                                            Edit
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center"
                                           href="@Url.Action("Details", new { id = item.Id })">
                                            <i class="material-icons me-2">visibility</i>
                                            View
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center text-danger"
                                           href="@Url.Action("Delete", new { id = item.Id })">
                                            <i class="material-icons me-2">delete</i>
                                            Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <a href="@Url.Action("Edit", new { id = item.Id })" class="text-decoration-none">
                            <h5 class="card-title text-truncate mb-2">
                                @(string.IsNullOrEmpty(item.Title) ? "Untitled Document" : item.Title)
                            </h5>

                            <div class="text-truncate text-muted small">
                                @(string.IsNullOrEmpty(item.Content) ? "No content" :
                                    item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="material-icons" style="font-size: 48px; color: #cbd5e1;">description</i>
            </div>
            <h3 class="h4 mb-3">No Documents Yet</h3>
            <p class="text-muted mb-4">Create your first document to get started</p>
            <button class="btn btn-primary d-inline-flex align-items-center"
                    onclick="location.href='@Url.Action("Create")'">
                <i class="material-icons me-2">add</i>
                Create Document
            </button>
        </div>
    }
</div>

<style>
    .border-dashed {
        border-style: dashed !important;
        border-color: #e2e8f0 !important;
    }

    .hover-card {
        transition: all 0.2s ease-in-out;
    }

    .hover-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }

    .dropdown-item {
        padding: 0.5rem 1rem;
    }

    .dropdown-item i {
        font-size: 20px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}