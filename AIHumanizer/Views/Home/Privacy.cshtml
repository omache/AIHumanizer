@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <h1 class="display-4 mb-4 text-center">Privacy Policy</h1>
                    <p class="text-muted text-center mb-5">Last updated: November 10, 2024</p>

                    <section class="mb-5">
                        <h2 class="h4 mb-4">Introduction</h2>
                        <p>At AI Content Editor, we take your privacy seriously. This privacy policy describes how we collect, use, and protect your personal information when you use our AI content humanization service.</p>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-4">Information We Collect</h2>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-transparent">
                                <i class="bi bi-check2-circle text-primary me-2"></i>
                                Content submitted for humanization
                            </li>
                            <li class="list-group-item bg-transparent">
                                <i class="bi bi-check2-circle text-primary me-2"></i>
                                Email address and account information
                            </li>
                            <li class="list-group-item bg-transparent">
                                <i class="bi bi-check2-circle text-primary me-2"></i>
                                Usage statistics and interaction data
                            </li>
                        </ul>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-4">How We Use Your Information</h2>
                        <div class="card bg-light border-0 mb-3">
                            <div class="card-body">
                                <ul class="mb-0">
                                    <li class="mb-2">To provide and improve our content humanization services</li>
                                    <li class="mb-2">To personalize your experience and improve our algorithms</li>
                                    <li class="mb-2">To communicate with you about service updates and changes</li>
                                    <li class="mb-2">To ensure the security and integrity of our platform</li>
                                </ul>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-4">Data Security</h2>
                        <p>We implement appropriate technical and organizational measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction.</p>
                        <div class="alert alert-info">
                            <i class="bi bi-shield-check me-2"></i>
                            Your content is encrypted during transmission and storage
                        </div>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-4">Your Rights</h2>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title">Access</h5>
                                        <p class="card-text">You can request access to your personal data</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title">Deletion</h5>
                                        <p class="card-text">You can request deletion of your personal data</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="mb-5">
                        <h2 class="h4 mb-4">Contact Us</h2>
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <p class="mb-0">If you have any questions about this Privacy Policy, please contact us at:</p>
                                <ul class="list-unstyled mt-3 mb-0">
                                    <li><strong>Email:</strong> omacherenox@gmail.com</li>
                                   
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

