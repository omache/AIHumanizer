<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Content Editor</title>

    <!-- Stylesheets -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TextEditor.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            padding: 1rem;
            background: white !important;
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
        }

        .navbar-brand {
            font-weight: 600;
            color: #2563eb !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-link {
            font-weight: 500;
            color: #4b5563 !important;
            transition: all 0.2s;
            padding: 0.5rem 1rem !important;
            border-radius: 0.375rem;
        }

            .nav-link:hover {
                color: #2563eb !important;
                background-color: #f3f4f6;
            }

            .nav-link.active {
                color: #2563eb !important;
                background-color: #eff6ff;
            }

        .btn-primary {
            background-color: #2563eb;
            border-color: #2563eb;
        }

        .btn-outline-primary {
            color: #2563eb;
            border-color: #2563eb;
        }

        .footer {
            background-color: white;
            padding: 1.5rem 0;
            box-shadow: 0 -2px 4px rgba(0,0,0,.04);
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #2563eb;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
            margin-right: 0.5rem;
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,.1), 0 2px 4px -1px rgba(0,0,0,.06);
            border-radius: 0.5rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="material-icons">edit_note</i>
                    AI Content Editor
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        @{
                            var currentAction = ViewContext?.RouteData?.Values["Action"]?.ToString() ?? "";
                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                               href="@Url.Action("Index", "AIContents")">
                                <i class="material-icons align-middle me-1" style="font-size: 20px;">home</i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction.Equals("Pricing", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                               href="@Url.Action("Pricing", "AIContents")">
                                <i class="material-icons align-middle me-1" style="font-size: 20px;">payments</i>
                                Pricing
                            </a>
                        </li>
                    </ul>

                    @if (!string.Equals(currentAction, "Login", StringComparison.OrdinalIgnoreCase) &&
                    !string.Equals(currentAction, "Register", StringComparison.OrdinalIgnoreCase))
                    {
                        @await Html.PartialAsync("_LoginPartial")
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year - AI Content Editor - All rights reserved</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a class="text-decoration-none text-muted me-3" href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
                    <a class="text-decoration-none text-muted me-3" href="#">Terms of Service</a>
                    <a class="text-decoration-none text-muted" href="#">Contact Us</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>